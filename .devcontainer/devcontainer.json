{
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    "forwardPorts": [6080],
    "portsAttributes": {
        "6080": {
            "label": "Desktop",
            "onAutoForward": "openPreview"
        }
    },
    "postCreateCommand": "sudo apt update && sudo apt install -y firefox chromium-browser",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-remote-extensionpack"
            ]
        }
    }
}
